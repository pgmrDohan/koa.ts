{
  "compilerOptions": {
    "target": "ES2017",
    // "lib": [],
    "module": "commonjs",
    "rootDir": "./src",
    "moduleResolution": "node10",
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": true,
    "newLine": "crlf",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "skipLibCheck": true
  }
}